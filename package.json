{
  "name": "fractal",
  "description": "Snowball's open-source design system mono-repository managed by Yarn 3",
  "author": "Snowball Engineering Team <engineering@snowball.xyz> (https://github.com/orgs/snowball-tech)",
  "private": true,
  "contributors": [
    "Clément PRÉVOT <clement@snowball.xyz> (https://github.com/clementprevot)"
  ],
  "license": "MIT",
  "keywords": [
    "snowball",
    "mono-repo",
    "yarn",
    "yarn3",
    "vercel",
    "javascript",
    "typescript",
    "react",
    "testing-library",
    "lodash",
    "design-system",
    "design-tokens",
    "style-dictionary",
    "storybook",
    "figma",
    "styleguide"
  ],
  "homepage": "https://github.com/snowball-tech/fractal",
  "repository": {
    "type": "git",
    "url": "https://github.com/snowball-tech/fractal.git"
  },
  "bugs": "https://github.com/snowball-tech/fractal/issues",
  "packageManager": "yarn@3.6.4",
  "engines": {
    "yarn": "^3.0.0",
    "node": "^18.0.0"
  },
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "publishConfig": {
    "access": "restricted"
  },
  "release": {
    "extends": "@snowball-tech/semantic-release-config"
  },
  "scripts": {
    "build": "NODE_ENV=production yarn workspaces foreach -t run build",
    "format": "yarn run -T format:root && yarn workspaces foreach -p run format",
    "format:fix": "yarn run -T format:root:fix && yarn workspaces foreach -p run format:fix",
    "format:root": "prettier --cache --check \"./!(apps|packages)\"",
    "format:root:fix": "prettier --cache --write \"./!(apps|packages)\"",
    "lint": "yarn run -T lint:root && yarn workspaces foreach -p run lint",
    "lint:fix": "yarn run -T lint:root:fix && yarn workspaces foreach -p run lint:fix",
    "lint:root": "eslint --cache \"./!(apps|packages)\"",
    "lint:root:fix": "eslint --cache --fix \"./!(apps|packages)\"",
    "publish:all": "multi-semantic-release",
    "publish:all:local": "CI=true yarn publish:all",
    "setup": "yarn install && yarn setup:freezer && yarn setup:husky && yarn workspaces foreach -pt run setup",
    "setup:freezer": "is-ci && ./scripts/setup-freezer.sh",
    "setup:husky": "is-ci || yarn husky install",
    "types:check": "yarn workspaces foreach -p run types:check",
    "update:references": "workspaces-to-typescript-project-references --includesRoot"
  },
  "devDependencies": {
    "@monorepo-utils/workspaces-to-typescript-project-references": "^2.10.2",
    "@qiwi/multi-semantic-release": "^7.0.0",
    "@snowball-tech/eslint-config": "^5.2.12",
    "@snowball-tech/prettier-config": "^1.3.10",
    "@snowball-tech/semantic-release-config": "^2.0.13",
    "@snowball-tech/stylelint-config": "^2.1.11",
    "@types/eslint": "^8.44.3",
    "@types/is-ci": "^3.0.1",
    "@types/node": "^20.8.4",
    "@types/prettier": "^3.0.0",
    "chromatic": "^7.2.3",
    "concurrently": "^8.2.1",
    "dotenv-cli": "^7.3.0",
    "eslint": "^8.51.0",
    "husky": "^8.0.3",
    "is-ci": "^3.0.1",
    "lint-staged": "^14.0.1",
    "nodemon": "^3.0.1",
    "prettier": "^3.0.3",
    "semantic-release": "^22.0.5",
    "serve": "^14.2.1",
    "stylelint": "^15.10.3",
    "ts-node": "^10.9.1",
    "typescript": "^5.2.2"
  }
}
