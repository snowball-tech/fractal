{
  "name": "fractal",
  "description": "Snowball's open-source design system mono-repository managed by Yarn 3 and TurboRepo",
  "author": "Snowball Engineering Team <engineering@snowball.xyz> (https://github.com/orgs/snowball-tech)",
  "private": true,
  "contributors": [
    "Clément PRÉVOT <clement@snowball.xyz> (https://github.com/clementprevot)"
  ],
  "license": "MIT",
  "keywords": [
    "snowball",
    "mono-repo",
    "yarn",
    "yarn3",
    "turborepo",
    "vercel",
    "javascript",
    "typescript",
    "react",
    "testing-library",
    "lodash",
    "design-system",
    "design-tokens",
    "style-dictionary",
    "storybook",
    "figma",
    "styleguide"
  ],
  "homepage": "https://github.com/snowball-tech/fractal",
  "repository": {
    "type": "git",
    "url": "https://github.com/snowball-tech/fractal.git"
  },
  "bugs": "https://github.com/snowball-tech/fractal/issues",
  "packageManager": "yarn@3.6.0",
  "engines": {
    "yarn": "^3.0.0",
    "node": "^18.0.0"
  },
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "publishConfig": {
    "access": "restricted"
  },
  "release": {
    "extends": "@snowball-tech/semantic-release-config"
  },
  "scripts": {
    "build": "yarn run -T turbo run build",
    "prebuild:storybook": "yarn run -T turbo run clean:storybook",
    "build:storybook": "yarn run prebuild:storybook && yarn run -T turbo run build:storybook --parallel",
    "format:root": "prettier --cache --check \"./!(apps|packages)\"",
    "format:root:fix": "prettier --cache --write \"./!(apps|packages)\"",
    "lint:root": "eslint --cache \"./!(apps|packages)\"",
    "lint:root:fix": "eslint --cache --fix \"./!(apps|packages)\"",
    "publish:all": "multi-semantic-release",
    "setup": "yarn install && yarn setup:freezer && yarn setup:husky",
    "setup:freezer": "is-ci && ./scripts/setup-freezer.sh",
    "setup:husky": "is-ci || yarn husky install",
    "update:references": "workspaces-to-typescript-project-references --includesRoot"
  },
  "devDependencies": {
    "@monorepo-utils/workspaces-to-typescript-project-references": "^2.9.0",
    "@qiwi/multi-semantic-release": "^7.0.0",
    "@snowball-tech/eslint-config": "^4.0.1",
    "@snowball-tech/prettier-config": "^1.2.0",
    "@snowball-tech/semantic-release-config": "^1.2.2",
    "@snowball-tech/stylelint-config": "^2.0.0",
    "@types/eslint": "^8.40.2",
    "@types/is-ci": "^3.0.0",
    "@types/node": "^20.3.2",
    "@types/prettier": "^2.7.3",
    "chromatic": "^6.19.9",
    "concurrently": "^8.2.0",
    "dotenv-cli": "^7.2.1",
    "eslint": "^8.43.0",
    "husky": "^8.0.3",
    "is-ci": "^3.0.1",
    "lint-staged": "^13.2.3",
    "nodemon": "^2.0.22",
    "prettier": "^2.8.8",
    "pythagora": "^0.0.71",
    "semantic-release": "^21.0.6",
    "stylelint": "^15.9.0",
    "ts-node": "^10.9.1",
    "turbo": "1.10.6",
    "typescript": "^5.1.6"
  }
}
